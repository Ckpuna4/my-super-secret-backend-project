{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "/opt/mock-data": ["./src/mocks/mock-data"],
      "/opt/response-utils": ["./src/utils/response-utils"]
    },
    "outDir": "./dist",
    "declaration": false,
    "declarationMap": false
  },
  "exclude": [
    "node_modules",
    "cdk.out",
    "src/tests"
  ]
}
